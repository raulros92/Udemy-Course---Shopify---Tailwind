{% case media.media_type %}
    {% when 'image' %}
        <img 
        src="{{ media | image_url }}" 
        alt="{{ media.preview_image.alt }}" 
        width="{{ media.width }}" 
        height="{{ media.height }}"
        class="w-full h-full object-cover object-center">

    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'w-full h-80 object-cover object-center' }}
        
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-80 object-cover object-center' }}

    {% when 'model' %}
        {{ media | model_viewer_tag: class: 'w-full h-80 object-cover object-center' }}

    {% else %}
        {{ media | media_tag }}
        
{% endcase %}