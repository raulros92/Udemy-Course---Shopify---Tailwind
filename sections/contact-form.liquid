<div class="flex flex-col items-center my-8">
  {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
  {% endif %}

  {% form 'contact' %}
    {% if form.errors %}
      <div class="border p-5">
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="text-sm font-medium ml-3">
            Oh no! Your message was not sent.
          </div>
        </div>
        <ul class="px-4 mb-3 ml-7 list-decimal">
          {% for error in form.errors %}
            <li>
              <span>{{ form.errors.messages[error] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-3 p-5">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <div class="text-sm font-medium ml-3">
          Your message was sent successfully. We will get back to you as soon as possible.
        </div>
      </div>
    {% endif %}

    {% comment %} Main container {% endcomment %}
    <div class="max-6xl mx-auto justify-center flex-1 items-center px-4">
      {% comment %} The container of the name and email {% endcomment %}
      <div class="flex px-1 mb-3">
        {% comment %} The container for the name {% endcomment %}
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name:</label>
          <input
            type="text"
            name="contact[name]"
            id="contact_name"
            placeholder="Your Name"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
        {% comment %} The container for the email {% endcomment %}
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email:</label>
          <input
            type="email"
            name="contact[email]"
            id="contact_email"
            placeholder="Your Email"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_message">Message:</label>
          <textarea
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            name="contact[body]"
            id="contact_message"></textarea>
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <input
            type="submit"
            value="submit message"
            class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700">
        </div>
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}