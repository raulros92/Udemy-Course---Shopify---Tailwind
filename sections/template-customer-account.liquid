<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold text-gray-700">Account</h1>

  <div class="block md:flex gap-4">
    {% assign number_of_orders = customer.orders | size %}
    {% if number_of_orders > 0 %}
      <div class="w-full my-6 md:my-12">
        <h2 class="text-xl font-bold text-gray-700">Order History</h2>

        {% paginate customer.orders by section.settings.pagination-orders %}

          <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 md:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            {% for order in customer.orders %}
              <div class="relative">
                <div class="w-full min-80 gb-gray-200 rounded-md overflow-hidden lg:h-80">
                  {% comment %} line_items attribute is an array {% endcomment %}
                  {% if order.line_items.first.image %}
                    <img
                      class="w-full h-full object-center object-cover"
                      src="{{ order.line_items.first.image | image_url }}"
                      alt="{{ order.line_items.first.image.alt }}"
                      width="{{ order.line_items.first.image.width }}"
                      height="{{ order.line_items.first.image.height }}">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                  {% endif %}
                </div>

                <div class="mt-4 flex items-start justify-between">
                  <div>
                    <h3 class="text-sm text-gray-700">{{ order.name | link_to: order.customer_url }}</h3>
                    <p class="mt-1 text-sm text-gray-500">{{ order.financial_status_label }}</p>
                  </div>
                  <div>
                    <div class="text-right">
                      <p class="text-sm font-medium text-white bg-gray-700 rounded-full px-3 py-1">{{ order.fulfillment_status_label }}</p>
                      <p class="text-sm">{{ order.total_price | money }}</p>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="max-w-6xl mx-auto">
            {% render 'pagination'
              , pagination: paginate %}
          </div>
        {% endpaginate %}
      </div>
    {% else %}
      <div class="w-full h-80 flex items-center justify-center">
        <h2 class="text-base md:text-2xl font-medium">You currently do not have any orders</h2>
      </div>
    {% endif %}

    <div class="w-full md:w-1/4">
      <h2 class="text-xl font-bold text-gray-700 mb-12">Account details</h2>

      {{ customer.default_address | format_address }}

      <a href="{{ routes.account_addresses_url }}" class="text-sm text-blue-600 hover:text-blue-800 underline">View addresses</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Template Customer Account",
    "settings": [
      {
        "type": "text",
        "id": "pagination-orders",
        "label": "Number of orders for each page",
        "default": "10"
      }
    ]
  }
{% endschema %}