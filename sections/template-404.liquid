{% comment %} 
            How to get content from locales:
            <h1>{{ 'general.404.title' | t }}</h1>
            <p>{{ 'general.404.subtext_html' | t  }}</p> 
{% endcomment %}

<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
    </div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
        {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.button_label }}</a>
    </div>
</div>

{% schema %}
  {
    "name": "Template 404",
  // By default, when Shopify renders a section, it's wrapped in a <div> element with a unique id attribute.
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "404"
      }, {
        "type": "text",
        "id": "subtext_title",
        "label": "404 Subtext Title",
        "default": "The page you are looking for is not found"
      },
      {
      "type": "text",
      "id": "button_label",
      "label": "404 Button Label",
      "default": "Back to homepage"
      },
      {
      "type": "url",
      "id": "button_url",
      "label": "404 Button URL",
      }
    ]
  }
{% endschema %}